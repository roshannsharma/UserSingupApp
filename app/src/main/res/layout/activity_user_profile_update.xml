<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_credential_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:padding="24dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/woliba_logo"
            android:src="@drawable/wolibaa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfileForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xx_large"
            app:cardCornerRadius="5dp"
            app:cardElevation="6dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImageView">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Heading -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_medium"
                        android:gravity="center"
                        android:text="@string/complete_your_profile"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="@color/grey_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />


                    <!-- First Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_14" />

                    <EditText
                        android:id="@+id/etfirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_micro"
                        android:background="@drawable/input_border"
                        android:hint="@string/first_name"
                        android:inputType="textCapWords"
                        android:padding="@dimen/space_medium"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/firstNameError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bt"
                        android:textSize="10sp" />

                    <!-- Last Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_medium"
                        android:text="@string/last_name"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_14" />

                    <EditText
                        android:id="@+id/etlastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_micro"
                        android:background="@drawable/input_border"
                        android:hint="@string/last_name"
                        android:inputType="textCapWords"
                        android:padding="@dimen/space_medium"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/lastNameError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bt"
                        android:textSize="10sp" />

                    <!-- Phone -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_medium"
                        android:text="@string/phone_number"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_14" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_micro"
                        android:background="@drawable/input_border"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/space_medium"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/PhoneError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bt"
                        android:textSize="10sp" />

                    <!-- DOB -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_medium"
                        android:text="DOB"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_14" />

                    <EditText
                        android:id="@+id/etDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_micro"
                        android:background="@drawable/input_border"
                        android:editable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="DOB"
                        android:inputType="date"
                        android:padding="@dimen/space_medium"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/grey_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/DOBError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/bt"
                        android:textSize="10sp" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

